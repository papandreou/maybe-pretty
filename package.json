{
  "name": "pretty-maybe",
  "version": "1.2.0",
  "description": "Prepare a text file to be written to disc, applying prettier if it's configured",
  "main": "lib/pretty-maybe.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint . && prettier --check '**/*.{js,md}'",
    "lint-staged": "lint-staged --no-stash",
    "coverage": "nyc --reporter=lcov --reporter=text --all -- npm test && echo google-chrome coverage/lcov-report/index.html",
    "ci": "npm run coverage && npm run lint"
  },
  "author": "Andreas Lind <andreaslindpetersen@gmail.com>",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "coveralls": "^3.0.9",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "lint-staged": "^10.1.3",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.1",
    "rimraf": "^3.0.1",
    "unexpected": "^11.12.1"
  },
  "dependencies": {
    "find-file-up": "^2.0.1",
    "memoizesync": "^1.1.1"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --check"
    ],
    "*.md": [
      "prettier --check"
    ]
  },
  "nyc": {
    "include": [
      "lib/**"
    ]
  }
}
